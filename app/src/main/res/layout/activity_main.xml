<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arturopavon.finalproject.MainActivity"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="16dp">

    <ListView
        android:id="@+id/list"
        android:layout_width="332dp"
        android:layout_height="446dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="104dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="7dp"
        android:onClick="preferences"
        android:src="@drawable/imageuser"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/list"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/imageView3"
        android:text="Nearby People"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logone" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_marginStart="12dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/imageView4"
        android:text="BiteME"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <ImageView
            android:id="@+id/bell"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="notifications"
            android:src="@drawable/notificationuser"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/circleN"
            android:layout_width="18dp"
            android:layout_height="17dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="1dp"
            android:src="@drawable/numbern"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/nNot"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="2dp"
            android:includeFontPadding="false"
            android:text="11"
            android:textAlignment="center"
            android:textSize="12sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/circleN"
            app:layout_constraintTop_toTopOf="@+id/circleN" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
