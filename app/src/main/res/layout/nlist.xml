<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#424242">

        <android.support.constraint.ConstraintLayout
            android:layout_width="340dp"
            android:layout_height="105dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularImageView2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/imageuser"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#8BC34A"
                app:civ_shadow_radius="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="12dp"
                android:text="TextView"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView12" />

            <TextView
                android:id="@+id/user2"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="44dp"
                android:text="TextView"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/circularImageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="7dp"
                android:onClick="decline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/indigo" />

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="11dp"
                android:onClick="accept"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/indigo" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:onClick="accept"
                app:layout_constraintEnd_toEndOf="@+id/circle1"
                app:layout_constraintTop_toTopOf="@+id/circle1"
                app:srcCompat="@drawable/check" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/circle2"
                app:layout_constraintTop_toTopOf="@+id/circle2"
                app:srcCompat="@drawable/cross" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="89dp"
                android:layout_marginTop="16dp"
                android:onClick="decline"
                app:layout_constraintStart_toEndOf="@+id/circularImageView2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/time" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="89dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/circularImageView2"
                app:srcCompat="@drawable/restaurant" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
